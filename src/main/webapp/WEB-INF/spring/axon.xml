<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core-2.0.xsd">

    <axon:annotation-config/>

    <axon:command-bus id="commandBus" transaction-manager="transactionManager">
        <axon:dispatchInterceptors>
            <bean class="org.axonframework.commandhandling.interceptors.BeanValidationInterceptor"/>
        </axon:dispatchInterceptors>
    </axon:command-bus>

    <axon:event-bus id="eventBus"/>
    <axon:jpa-event-store id="eventStore" data-source="dataSource"/>

    <axon:cluster id="cluster" default="true">
        <axon:replay-config/>
        <bean id="replayingCluster" class="org.axonframework.eventhandling.replay.ReplayingCluster">
            <constructor-arg>
                <bean id="simpleCluster" class="org.axonframework.eventhandling.SimpleCluster">
                    <constructor-arg value="simpleCluster"/>
                </bean>
            </constructor-arg>
            <constructor-arg ref="eventStore"/>
            <constructor-arg>
                <bean class="org.axonframework.unitofwork.SpringTransactionManager">
                    <constructor-arg ref="transactionManager"/>
                    <constructor-arg>
                        <bean class="org.springframework.transaction.support.DefaultTransactionDefinition"/>
                    </constructor-arg>
                </bean>
            </constructor-arg>
            <constructor-arg value="0"/>
            <constructor-arg>
                <bean class="org.axonframework.eventhandling.replay.BackloggingIncomingMessageHandler"/>
            </constructor-arg>
        </bean>
    </axon:cluster>

    <bean id="fieldRepository" class="org.axonframework.eventsourcing.EventSourcingRepository">
        <constructor-arg ref="fieldFactory"/>
        <constructor-arg ref="eventStore"/>
    </bean>

    <axon:aggregate-command-handler id="booleanFieldHandler"
                                    aggregate-type="org.example.write.domain.BooleanField"
                                    repository="fieldRepository"
                                    command-bus="commandBus"/>

    <axon:aggregate-command-handler id="textFieldHandler"
                                    aggregate-type="org.example.write.domain.TextField"
                                    repository="fieldRepository"
                                    command-bus="commandBus"/>

    <axon:aggregate-command-handler id="numberFieldHandler"
                                    aggregate-type="org.example.write.domain.NumberField"
                                    repository="fieldRepository"
                                    command-bus="commandBus"/>

    <axon:event-sourcing-repository id="formSubmissionRepository"
                                    aggregate-type="org.example.write.domain.FormSubmission"/>

    <axon:aggregate-command-handler id="formSubmissionHandler"
                                    aggregate-type="org.example.write.domain.FormSubmission"
                                    repository="formSubmissionRepository"
                                    command-bus="commandBus"/>

    <bean class="org.axonframework.commandhandling.gateway.CommandGatewayFactoryBean">
        <property name="commandBus" ref="commandBus"/>
    </bean>

</beans>